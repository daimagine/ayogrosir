
<article class="module width_full">
<header><h3 class="tabs_involved">List Products</h3></header>

<div class="tab_container">
  <table class="tablesorter" cellspacing="0"> 
    <thead> 
        <tr>
            <th>Store</th> 
            <th>Name</th>
            <th>Price</th>
            <th>Logo img</th>
            <th>Info1</th>
            <th></th>
        </tr> 
    </thead> 
    <tbody> 
      <% @admin_products.each do |admin_product| %>
        <tr> 
            <td><%= admin_product.store && admin_product.store.name %></td>
            <td><%= admin_product.name %></td>
            <td><%= admin_product.price %></td>
            <td><%= image_tag admin_product.pic.url(:thumb) %></td>
            <td><%= admin_product.info1 %></td>
            <td>
              <%= link_to 'Show', admin_product_path(admin_product) %> | 
              <%= link_to 'Edit', edit_admin_product_path(admin_product) %> |
              <%= link_to 'Destroy', admin_product_path(admin_product), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr> 
      <% end %>
    </tbody> 
  </table>
  <footer>
    <div class="submit_link">
      <%= link_to 'New Product', new_admin_product_path%>
    </div>
  </footer>
</div>
