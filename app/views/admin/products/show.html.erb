<article class="module width_full">
  <header><h3><%= @admin_product.name %></h3></header>

  <div class="">
    <div class="module_content">
      <div class="message">
        <p id="notice"><%= notice %></p>
      </div>
      <div class="message">
        <p>
          <b>Price:</b>
          <%= @admin_product.price %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Logo img:</b>
          <%= @admin_product.logo_img %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Description:</b>
          <%= @admin_product.description %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Info1:</b>
          <%= @admin_product.info1 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Status:</b>
          <%= @admin_product.status %>
        </p>
      </div>

      <div class="message">
        <p>
          <%= link_to 'Edit', edit_admin_product_path(@admin_product) %> |
          <%= link_to 'Back', admin_products_path %>
        </p>
      </div>
    </div>
  </div>

</article><!-- end of stats article -->