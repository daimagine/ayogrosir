
  
  <div class="message">
    <%= f.error_notification %>
  </div>
  <div class="message">
    <div class="control-group string required store_name">
      <label class="string required control-label" for="store_name">
        Store
      </label>
      <div class="controls">
        <%= f.select :store_id, @stores.map {|r| [r.name,r.id] } %>
      </div>
    </div>
  </div>
  <div class="message">
    <%= f.input :name %>
  </div>
  <div class="message">
    <%= f.input :price %>
  </div>
  <div class="message">
    <label class="string required control-label" for="product_pic">
      Picture
    </label>
    <div class="controls">
      <%= f.file_field :pic %>
    </div>
  </div>
  
  <div class="message">
    <label class="control-label">Description</label>
    <%= f.text_area :description, :class => "tinymce", :rows => 20, :cols => 60 %>
  </div>
  <div class="message">
    <label class="control-label">Information</label>
    <%= f.text_area :info1, :class => "tinymce", :rows => 20, :cols => 60 %>
  </div>

  <div class="message form-actions">
    <p>
      <%= f.button :submit %>
    </p>
  </div>
