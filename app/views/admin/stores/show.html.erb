<article class="module width_full">
  <header><h3><%= @admin_store.name %></h3></header>

  <div class="">
    <div class="module_content">
      <div class="message">
        <p id="notice"><%= notice %></p>
      </div>

      <div class="message">
        <p><%= image_tag @admin_store.pic %></p>
      </div>
      <div class="message">
        <p>
          <b>Category: </b>
          <%= @admin_store.categories && @admin_store.categories.first && @admin_store.categories.collect(&:name).join(", ") %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Street1:</b>
          <%= @admin_store.street1 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Street2:</b>
          <%= @admin_store.street2 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>City:</b>
          <%= @admin_store.city %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Postal code:</b>
          <%= @admin_store.postal_code %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Phone1:</b>
          <%= @admin_store.phone1 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Phone2:</b>
          <%= @admin_store.phone2 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Description:</b>
          <%= @admin_store.description %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Info1:</b>
          <%= @admin_store.info1 %>
        </p>
      </div>
      <div class="message">
        <p>
          <b>Status:</b>
          <%= @admin_store.status %>
        </p>
      </div>

      <div class="message">
        <p>
          <%= link_to 'Edit', edit_admin_store_path(@admin_store) %> |
          <%= link_to 'Back', admin_stores_path %>
        </p>
      </div>
    </div>
  </div>

</article><!-- end of stats article -->


<article class="module width_full">
<header><h3 class="tabs_involved">List Products</h3></header>

<div class="tab_container">
  <table class="tablesorter" cellspacing="0"> 
    <thead> 
        <tr>
            <th>Store</th> 
            <th>Name</th>
            <th>Price</th>
            <th>Logo img</th>
            <th>Info1</th>
            <th></th>
        </tr> 
    </thead> 
    <tbody> 
      <% @admin_store.products.each do |admin_product| %>
        <tr> 
            <td><%= admin_product.store && admin_product.store.name %></td>
            <td><%= admin_product.name %></td>
            <td><%= admin_product.price %></td>
            <td><%= admin_product.logo_img %></td>
            <td><%= admin_product.info1 %></td>
            <td>
              <%= link_to 'Show', admin_product_path(admin_product) %> | 
              <%= link_to 'Edit', edit_admin_product_path(admin_product) %> |
              <%= link_to 'Destroy', admin_product_path(admin_product), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr> 
      <% end %>
    </tbody> 
  </table>
  <footer>
    <div class="submit_link">
      <%= link_to 'New Product', new_admin_product_path%>
    </div>
  </footer>
</div>
