
<article class="module width_full">
  <header><h3>New Category</h3></header>

  <div class="">
    <div class="module_content">
		
		<%= simple_form_for(@admin_category, :url => admin_categories_path, :method => 'POST') do |f| %>

		  <div class="message">
		    <%= f.error_notification %>
		  </div>
		  <div class="message">
		    <%= f.input :name %>
		  </div>
		  
			<div class="control-group">
	      <label class="control-label">
	        Type
	      </label>
	      <div class="controls">
	        <select id="category_type" name="category[cat_type]">
	        	<option value="Store" <%= 'selected="selected"' if @admin_category.cat_type == 'Store' %> >Store</option>
						<option value="Product" <%= 'selected="selected"' if @admin_category.cat_type == 'Product' %> >Product</option>
					</select>
	      </div>
	    </div>

		  <div class="message form-actions">
		    <p>
		      <%= f.button :submit %>
		    </p>
		  </div>

		<% end %>	

	  <div class="message form-actions">
	    <p>
	      <%= link_to 'Back', admin_categories_path %>
	    </p>
	  </div>

    </div>
  </div>

</article><!-- end of stats article -->


