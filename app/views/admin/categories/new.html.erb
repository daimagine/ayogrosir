
<article class="module width_full">
  <header><h3>New Category</h3></header>

  <div class="">
    <div class="module_content">
		
		<%= simple_form_for(@admin_category, :url => admin_categories_path, :method => 'POST') do |f| %>

		  <div class="message">
		    <%= f.error_notification %>
		  </div>
		  <div class="message">
		    <%= f.input :name %>
		  </div>
		  <div class="message">
		    <%= f.input :cat_type %>
		  </div>

		  <div class="message form-actions">
		    <p>
		      <%= f.button :submit %>
		    </p>
		  </div>

		<% end %>	

	  <div class="message form-actions">
	    <p>
	      <%= link_to 'Back', admin_categories_path %>
	    </p>
	  </div>

    </div>
  </div>

</article><!-- end of stats article -->


