
<article class="module width_full">
<header><h3 class="tabs_involved">List Categories</h3></header>

<div class="tab_container">
  <table class="tablesorter" cellspacing="0"> 
    <thead> 
        <tr> 
            <th>Name</th>
            <th>Type</th>
            <th></th>
        </tr> 
    </thead> 
    <tbody> 
      <% @admin_categories.each do |admin_category| %>
        <tr> 
            <td><%= admin_category.name %></td>
            <td><%= admin_category.cat_type %></td>
            <td>
              <%= link_to 'Show', admin_category_path(admin_category) %> | 
              <%= link_to 'Edit', edit_admin_category_path(admin_category) %> |
              <%= link_to 'Destroy', admin_category_path(admin_category), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr> 
      <% end %>
    </tbody> 
  </table>
  <footer>
    <div class="submit_link">
      <%= link_to 'New Category', new_admin_category_path%>
    </div>
  </footer>
</div>
